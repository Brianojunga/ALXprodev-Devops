#!/bin/bash

pokemon_list=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

for pokemon in "${pokemon_list[@]}"; do
    echo "Fetching data for $pokemon..."

    # API URL
    URL="https://pokeapi.co/api/v2/pokemon/$pokemon"

    # Output JSON file
    OUTPUT="${pokemon}.json"

    # Perform request
    curl -s "$URL" -o "$OUTPUT"

    # Add delay to avoid rate-limits
    sleep 1

    echo "Saved $OUTPUT"
done
